.RowForm
  @extends .clearfix

.ElementForm
  &.is-error
    input
      border 1px solid #e6262f


.ElementForm-statement
  position relative

.ElementForm-label
  color black
  display inline-block
  font-size 14px
  width 120px

  &.is-error
    margin 5px 0 0

.ElementForm-label--checkbox  
  /*max-width 385px*/
  font-size 14px
  margin 0 0 0 10px
  width 100%
  vertical-align middle
  display inline

.ElementForm-input  
  border 1px solid #2b9fe9  
  display inline-block
  padding 10px
  width 335px

.ElementForm-contentCheckBox
  display inline-block
  width 12px
  height 11px
  position relative
  vertical-align middle
  
  &.is-checked
    .ElementForm-checkBoxIcon
      @extends .sp-form-checkbox-active
    
  .ElementForm-checkBoxIcon
    @extends .sp-form-checkbox

  input
    opacity 0
    display block
    height 100%
    width 100%
    position absolute
    top 0
    
  label
    position relative 
    z-index 100

.ElementForm-errorContent
  label
    display  block
    text-align left    
    font-size 12px
    color #ffd200
    width 100%
    padding 0 0 0 123px

.ElementForm-select  
  border 1px solid #2b9fe9
  padding 10px 0
  width 334px
  display inline-block
  position relative
  height 20px
  vertical-align middle
  
  &.is-disabled
    .ElementForm-selectText
    .ElementForm-selectIcon
      opacity .6

  .ElementForm-selectText    
    font-family 'Arial'
    padding 0 0 0 5px
    text-transform uppercase
  
  .ElementForm-selectIcon
    position absolute
    right 20px
    top 15px
    @extends .sp-form-arrow

  select
    -webkit-appearance: menulist-button
    bottom 0
    left 0
    opacity 0
    position absolute
    top 0
    width 100%